<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_criar_conta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.quiles.workout.CriarConta"
    tools:showIn="@layout/activity_criar_conta">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txt_senhaCriarConta"
        android:background="@drawable/com_facebook_tooltip_blue_background"
        android:layout_above="@+id/btn_cancelarCriarConta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp"
        android:hint="Senha:"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txt_emailCriarConta"
        android:background="@drawable/com_facebook_tooltip_blue_background"
        android:inputType="text"
        android:layout_above="@+id/txt_senhaCriarConta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Email:" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/workout"
        android:id="@+id/imageView3"
        android:layout_height="200px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txt_nomeCriarConta"
        android:background="@drawable/com_facebook_tooltip_blue_background"
        android:inputType="text"
        android:layout_above="@+id/txt_emailCriarConta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nome:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txt_confirmarSenhaCriarConta"
        android:background="@drawable/com_facebook_tooltip_blue_background"
        android:hint="Confirmar senha:"
        android:inputType="textPassword"
        android:layout_above="@+id/btn_criarContaCriarConta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="cancelar"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancelarCriarConta"
        android:background="@drawable/com_facebook_tooltip_blue_background"
        android:layout_width="wrap_content"
        android:onClick="sair"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="62dp"
        android:layout_marginEnd="62dp" />

    <Button
        android:text="criar conta"
        android:layout_height="wrap_content"
        android:id="@+id/btn_criarContaCriarConta"
        android:background="@drawable/com_facebook_tooltip_blue_background"
        android:layout_width="wrap_content"
        android:onClick="validacao"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_cancelarCriarConta"
        android:layout_toStartOf="@+id/btn_cancelarCriarConta" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_height="200dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>