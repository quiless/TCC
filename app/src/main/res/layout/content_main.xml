<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.quiles.workout.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_centerInParent="false"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp" />

    <Button
        android:text="Logout"
        android:id="@+id/btn_logout"
        android:background="@drawable/com_facebook_tooltip_blue_background"
        android:elevation="24dp"
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:onClick="sair"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/workout"
        android:id="@+id/imageView3"
        android:layout_height="200px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="SELECIONAR TREINO"
        android:id="@+id/btn_treino"
        android:background="@drawable/com_facebook_tooltip_blue_background"
        android:elevation="24dp"
        android:layout_height="50dp"
        android:layout_width="180dp"
        android:onClick="popup"
        android:layout_above="@+id/btn_historico"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="HISTORICO"
        android:id="@+id/btn_historico"
        android:background="@drawable/com_facebook_tooltip_blue_background"
        android:elevation="24dp"
        android:layout_height="50dp"
        android:layout_width="180dp"
        android:onClick="treino"
        android:layout_above="@+id/btn_logout"
        android:layout_alignLeft="@+id/btn_treino"
        android:layout_alignStart="@+id/btn_treino" />

</RelativeLayout>
